{
    "id": "5d837bec4a3a1a27619aafb6",
    "database": "atlasmonitor",
    "collection": "clusters",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "owner.id": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "name": "isValidAdmin",
                        "arguments": [
                            "%%user"
                        ]
                    }
                }
            },
            "write": true,
            "insert": false,
            "delete": false,
            "additional_fields": {}
        },
        {
            "name": "default",
            "apply_when": {},
            "read": true,
            "insert": false,
            "delete": false,
            "additional_fields": {}
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "owner_id": {
                "bsonType": "string"
            }
        }
    }
}
